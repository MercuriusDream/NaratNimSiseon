args = "cd backend && python manage.py migrate"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python manage.py collectstatic --noinput"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python manage.py runserver 0.0.0.0:3000"

